<!DOCTYPE html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Home Page</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="css/main.css">
  <script src="js/viewDogs.js"></script>
<script type="text/javascipt">
$.ajax({
            type: "POST",
            url: "/addDog",
            data: { name: name,
                    breed: breed,
                    age: age,
                    gender:gender
             },
            success: function(data) {
              this.location.reload(true);

            },
            error: function(jqXHR, textStatus, err) {
                alert('text status '+textStatus+', err '+err)
            }
        });
</script>
</head>
<body>

  <nav class="navbar navbar-inverse navbar-static-top">
    <div class="container-fluid">
      <div class="navbar-header" >
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">CCREZQ</a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>
          <li><a href="/viewdirectors">View Directors</a></li>
          <li><a href="/viewfosters">View Fosters</a></li>
          <li><a href="/viewdogs">View Dogs</a></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div id="viewDogsContainer">
    <div class="container-fluid">

    <div class="row">
      <div class="col-md-12">
        <h1 class="pageHeading">View Dogs</h1><br/>
      </div>
    </div>

    <form>
      <div class="form-group">
        <div class="row">
          <div class="col-md-2 col-md-offset-8">
            <input type="text" class="form-control" id="dogSearch" name="search">
          </div>
          <div class="col-md-2">
            <button type="submit" class="btn btn-default toggleButtonActive">Search</button>
          </div>
        </div>
      </div>
    </form>
    <form>
      <div class="form-group">
        <div class="row">
          <div class="col-md-2">
                <button type="button" class="btn btn-success addButton" data-toggle="modal"
                data-target="#addDoggo">Add Doggo</button>
          </div>
        </div>
      </div>
    </form>
    <!--add doggo modal-->
    <div id="addDoggo" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add Doggo</h4>
      </div>
      <div class="modal-body">
        <form action="/addDog" method="POST">
                <div class="form-group">
                  <label for="name">Name:</label>
                  <input type="text" class="form-control" id="name" name="name">
                </div>
                  <div class="form-group">
                    <label for="breed">Breed:</label>
                    <input type="text" class="form-control" id="breed" name="breed">
                  </div>
                <div class="form-group">
                  <div class="col-2">
                  <label for="age">Age:</label>
                  <input type="number" class="form-control" id="age" name="age">
                </div>
                </div>
                <div class="form-group">
                  <label for="gender">Gender:</label><br/>
                  <input type="radio" name="gender" value="male"> Male<br>
                  <input type="radio" name="gender" value="female"> Female<br>
                </div>
          <button type="submit" class="btn btn-default">Add Doggo</button>
        </form>
      </div>
      <div class="modal-footer">
<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

    <div class="row">
    <% data.forEach(function(item){ %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-body tile dogPanel">
            <p class="idHolder" style="display:none;"><%= item.id %></p>
            <img src =<%= item.img %> style="width:15%; border-radius: 50%;">
            <h2 class="name"><%= item.name %></h2>
            <h4 class="address"><%= item.age %></h4>
            <h4 class="phone"><%= item.breed %></h4>
          </div>
        </div>
      </div>
    <% }); %>
  </div>

  </div>

  <div class="footer">

  </div>

</body>
</html>
